{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "--collect:'XPlat Code Coverage'",
                "--logger:'console;verbosity=normal'"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        }
    ]
}